
#!/bin/bash

USER="$1"
BACKUP="/backup/user_home"

mkdir -p "$BACKUP"

tar -czf "$BACKUP/${USER}_home_$(date +%F).tar.gz" /home/"$USER" \
  && userdel -r "$USER"


